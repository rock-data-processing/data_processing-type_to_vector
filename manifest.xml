  <license>LGPL v2 or later</license>
  <url>http://</url>
  <logo>http://</logo>
  <tags>stable</tags>
  <keywords>
     <keyword>Utilities</keyword>
     <keyword>Middleware</keyword>
   </keywords>

  <stage>-1</stage>
  <use>multi project</use>
  <activity>active</activity>

  <classifiers>
    <classifier>c++</classifier>
    <classifier>rock</classifier>
    <classifier>ubuntu</classifier>
  </classifiers>

  <depend package="base/cmake" />
  <depend package="typelib" />
  <depend package="utilmm" />
  <depend package="eigen3" />
  <depend package="boost" />
</package>
